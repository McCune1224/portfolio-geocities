package templates

templ GameCard(gameName string, imageName string) {
	<article class="text-center content-center justify-center">
		<h3 class="text-2xl underline underline-offset-4">
			<b>{ gameName }</b>
		</h3>
		<div class="flex flex-row">
			<img
				class="border-8 border-black"
				src={ "media/" + imageName }
			/>
			{ children... }
		</div>
	</article>
}
