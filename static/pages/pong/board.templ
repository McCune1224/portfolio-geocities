package pong

templ LiveBoard(grid [][]string) {
	<table
		hx-get="/pong/update"
		hx-swap="outerHTML"
		hx-trigger="every 50ms"
		id="pong-board"
		class="text-center"
	>
		for i := range grid {
			<tr class="flex flex-row bg-zinc-900 ">
				for j := range grid[i] {
					<td>
						{ grid[i][j] }
					</td>
				}
			</tr>
		}
	</table>
}

templ StartGameButton() {
	<div id="pong-board">
		<button
			class="bg-orange-400 border-2 border-pink-500 hover:text-purple-500 content-center"
			type="button"
			hx-get="/pong/new"
			hx-swap="outerHTML"
		>Play Pong</button>
	</div>
}
